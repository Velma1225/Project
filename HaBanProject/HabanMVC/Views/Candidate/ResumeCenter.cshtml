@using HabanMVC.ViewModels;

@model List<ResumeCenterViewModel>
@{
    Layout = "~/Views/Shared/_LayoutCandidate.cshtml";
    ViewData["Title"] = "ResumeCenter";
}

@section breadcrumb{
    <div class="hi row mx-1">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./myAccount.html" class="text-decoration-none">我的帳戶首頁</a></li>
                <li class="breadcrumb-item" aria-current="page">履歷中心</li>
            </ol>
        </nav>
    </div>

}


<!-- 履歷列表 -->
<section>
    <div class="container">
        <div class="row">
            <div class="resumeList">
                <!-- 表頭 -->
                <div class="col-12 title">
                    <h2 class="mb-0">
                        履歷列表
                        <span class="title_num">共 @Model.Count 份</span>
                    </h2>
                    <div class="btn_content">
                        <button class="resumeNew" id="resumeAdd">新增履歷</button>
                    </div>
                </div>

                <!-- 求職履歷卡 -->
                <div class="resumeCardList">
                    <div class="row">
                        <div class="col-lg-12 col-xl-6">
                            <div class="resumeCard">
                                <div class="resumeCard_banner">
                                    <img src="~/images/login_resume-img/resumecardbanner.svg" alt="履歷中心封面圖" />
                                </div>
                                <div class="resumeCard_content">
                                    <div>
                                        <div class="resumeCard_contentTop">
                                            <div class="resumeCard_contentName">
                                                <span class="resumeCard_contentLabel">預設</span>
                                                <span class="resumeCard_contentResume">@Model[0].ResumeName</span>
                                            </div>
                                            <div class="resumeCard_contentFunc">
                                                <div class="list-menu-box">
                                                    <button class="btn list-menu-btn"></button>
                                                    <div class="list-menu-list"
                                                         style="display: none">
                                                        <div class="button-group">
                                                            <button class="preview">預覽</button>
                                                            <button class="resumeDefault">設為預設</button>
                                                            <button class="rename">更改名稱</button>
                                                        </div>
                                                        <button class="resumeDelete">刪除</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- todo日期更新 -->
                                    <div class="resumeCard_contentBottom">
                                        <div class="resumeCard_contentDate">
                                            @Model[0].CreateAt 更新
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-xl-6">
                            <div class="resumeCard">
                                <div class="resumeCard_banner">
                                    <img src="~/images/login_resume-img/resumecardbanner.svg" alt="履歷中心封面圖" />
                                </div>
                                <div class="resumeCard_content">
                                    <div>
                                        <div class="resumeCard_contentTop">
                                            <div class="resumeCard_contentName">
                                                <span class="resumeCard_contentResume">@Model[1].ResumeName</span>
                                            </div>
                                            <div class="resumeCard_contentFunc">
                                                <div class="list-menu-box">
                                                    <button class="btn list-menu-btn"></button>
                                                    <div class="list-menu-list"
                                                         style="display: none">
                                                        <div class="button-group">
                                                            <button class="preview">預覽</button>
                                                            <button class="resumeDefault">設為預設</button>
                                                            <button class="rename">更改名稱</button>
                                                        </div>
                                                        <button class="resumeDelete">刪除</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="resumeCard_contentBottom">
                                        <div class="resumeCard_contentDate">
                                            @Model[1].CreateAt 更新
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- 履歷設定 -->
<section>
    <div class="container">
        <div class="row">
            <div class="settingresume">
                <div class="col-12 title">
                    <h2 class="mb-0">履歷設定</h2>
                </div>
                <div class="row">
                    <div class="col-12 settingGroup">
                        <div class="settingGroup_title">履歷開關設定</div>
                        <div class="settingGroup_item w-100">
                            <div class="settingGroup_itemForm">
                                <label class="radio-label">
                                    <input type="radio" name="resume_status" value="1">
                                    <i class="radio-icon"></i>開啓
                                </label>
                                <label class="radio-label">
                                    <input type="radio" name="resume_status" value="2" checked>
                                    <i class="radio-icon"></i>關閉
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section topCSS{
    <link href="~/css/Candidate/Index/Index.css" rel="stylesheet" />
    <link href="~/css/candidate/resumecenter/resumecenter.css" rel="stylesheet" />
}
@section endJS{

}
