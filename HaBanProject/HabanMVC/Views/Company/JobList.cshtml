                @{
                    var jobTenure = "";
                    var jobEducation = "";
                    foreach (var job in Model)
                    {
                        @switch (@job.JobTenure)
                        {
                            case 1:
                                jobTenure = "經歷不拘";
                                break;
                            case 2:
                                jobTenure = "經歷1年";
                                break;
                            case 3:
                                jobTenure = "經歷3年";
                                break;
                        }
                        @switch (@job.Education)
                        {
                            case 1:
                                jobEducation = "學歷不拘";
                                break;
                            case 2:
                                jobEducation = "學歷高中";
                                break;
                            case 3:
                                jobEducation = "學歷大學";
                                break;
                        }




                        <div class="job-card @(@job.OpenOrNot == true ? String.Empty : "is-discontinued" ) d-lg-flex justify-content-lg-between ">
                            <div class="job-intro col-lg-9 col-12">
                                <h3 class="job-title">@job.JobName</h3>
                                <div class="company">
                                    <a href="https://www.518.com.tw/company-yvM8ME.html">
                                        @job.CompanyName<i></i>
                                    </a>
                                </div>
                                <div class="job-salary">時薪 @(job.PayByHour)元</div>
                                <div class="job-conditions">
                                    <div class="job-area">@job.Location</div>
                                    <div class="job-experience">@jobTenure</div>
                                    <div class="job-education">@jobEducation</div>
                                </div>
                                <div class="job-description for-pc">
                                    <p>
                                        @job.JobDescription
                                    </p>
                                </div>
                            </div>
                            <div class="using-state col-lg-3 col-12 ">
                                <div class="row">
                                    <div class="count-down-day col-lg-10 col-5">
                                        剩餘置頂天數 :<br>
                                        <span class="day">7天</span>
                                    </div>
                                    <div class="btn-box col-lg-10 col-6">
                                        <button type="button" class="btn btn-outline-danger btn-sm">編輯</button>
                                        <button type="button" class="delete-btn btn btn-outline-danger btn-sm"
                                                data-bs-toggle="modal" data-bs-target="#useTOPModal">
                                            刪除
                                        </button>
                                        <button type="button" class="discontinued-btn btn btn-outline-danger btn-sm">下架</button>
                                    </div>

                                </div>
                            </div>

                        </div>
                    }

                }











