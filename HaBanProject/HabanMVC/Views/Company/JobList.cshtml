@model List<JobList>
@{
    ViewData["Title"] = "JobList";
    Layout = "~/Views/Shared/_LayoutSidebarCompany.cshtml";
}


<!-- 右側內容 -->
<h2 class="d-inline-flex">職缺清單</h2>

