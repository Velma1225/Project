                                    <option selected>行政區</option>
                                    <option value="1">松山區</option>
                                    <option value="2">信義區</option>
                                    <option value="3">大安區</option>
                                    <option value="4">JS生成...</option>
                                </select>
                                <input type="text" id="Address" class="w-100 ">
                            </td>
                        </tr>


                        <tr>
                            <td><span class="mark-text-red p-1">*</span>上班時段：</td>
                            <td>
                                <div id="WorkingHours" class="form-row d-flex justify-content-between">
                                    <input type="time" name="usr_time">
                                    至
                                    <input type="time" name="usr_time">
                                </div>

                            </td>

                        </tr>

                        <tr>
                            <td><span class="mark-text-red p-1">*</span>職務類別：</td>
