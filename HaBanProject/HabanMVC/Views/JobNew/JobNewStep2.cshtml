@{
    ViewData["Title"] = "JobNewStep2";
    Layout = "~/Views/Shared/_LayoutSidebarCompany.cshtml";
}

<div style="margin-left: 1px;" class="row justify-content-between">

    <h2 class="col-6">刊登新職缺</h2>
    <span class="remark col-6 text-end"><em>＊</em>為必填項目</span>
</div>

<ol class="stepsBox">
    <li class="is-complete col-12 col-lg-3">1.填寫工作內容與職缺資訊</li>
    <li class="is-doing col-12 col-lg-3">2.填寫職缺條件</li>
    <li class=" col-12 col-lg-3">3.填寫應徵與面試</li>
    <li class=" col-12 col-lg-3">4.觀看預覽</li>
</ol>
<div class="col-lg-12">
    <div class="job-content">

        <div class="card card-no-radius mb-3">
            <div class="card-header card-title-p">
                <div class="fw-bold d-flex justify-content-between align-items-center">
                    <span>職缺條件</span>
                </div>
            </div>
            <div class="card-body text-secondary">

                <table class="table table-striped table-rwd ">

                    <tbody>
                        <tr>
                            <td><span class="text-danger p-1 ">*</span>職位性質：</td>
                            <td>
                                <div id="EmploymentCategory" class="d-flex col-12">
                                    <div class="col-3 col-lg-3 job-type form-check">
                                        <input class="form-check-input" type="radio" name="EmploymentCategory"
                                               id="EmploymentCategory1">
                                        <label class="form-check-label" for="EmploymentCategory1">
                                            不拘
                                        </label>
                                    </div>
                                    <div class="col-3 col-lg-3 job-type form-check">
                                        <input class="form-check-input" type="radio" name="EmploymentCategory"
                                               id="EmploymentCategory2">
                                        <label class="form-check-label" for="EmploymentCategory2">
                                            全職
                                        </label>
                                    </div>
                                    <div class="col-3 col-lg-3 job-type form-check">
                                        <input class="form-check-input" type="radio" name="EmploymentCategory"
                                               id="EmploymentCategory3">
                                        <label class="form-check-label" for="EmploymentCategory3">
                                            兼職
                                        </label>
                                    </div>
                                    <div class="col-3 col-lg-3 job-type form-check">
                                        <input class="form-check-input" type="radio" name="EmploymentCategory"
                                               id="EmploymentCategory4">
                                        <label class="form-check-label" for="EmploymentCategory4">
                                            打工
                                        </label>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td><span class="text-danger p-1">*</span>上班班別：</td>
                            <td>
                                <div id="JobShift" class="d-flex col-12">
                                    <div class="col-3 col-lg-3 job-type form-check">
                                        <input class="form-check-input" type="radio" name="JobShift" id="JobShift1">
                                        <label class="form-check-label" for="JobShift1">
                                            日班
                                        </label>
                                    </div>
                                    <div class="col-3 col-lg-3 job-type form-check">
                                        <input class="form-check-input" type="radio" name="JobShift" id="JobShift2">
                                        <label class="form-check-label" for="JobShift2">
                                            晚班
                                        </label>
                                    </div>
                                    <div class="col-3 col-lg-3 job-type form-check">
                                        <input class="form-check-input" type="radio" name="JobShift" id="JobShift3">
                                        <label class="form-check-label" for="JobShift3">
                                            大夜班
                                        </label>
                                    </div>
                                    <div class="col-3 col-lg-3 job-type form-check">
                                        <input class="form-check-input" type="radio" name="JobShift" id="JobShift4">
                                        <label class="form-check-label" for="JobShift4">
                                            假日
                                        </label>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td><span class="text-danger p-1">*</span>管理責任：</td>
                            <td>
                                <div id="Management" class="d-flex col-12">
                                    <div class="col-6 col-lg-3 job-type">
                                        <input class="form-check-input" type="radio" name="Management" id="Management1">
                                        <label class="form-check-label" for="Management1">
                                            有
                                        </label>
                                    </div>
                                    <div class="col-6 col-lg-3 job-type">
                                        <input class="form-check-input" type="radio" name="Management" id="Management2">
                                        <label class="form-check-label" for="Management2">
                                            無
                                        </label>
                                    </div>

                                </div>
                            </td>
                        </tr>


                        <tr>
                            <td><span class="text-danger p-1">*</span>工作經驗：</td>
                            <td>
                                <div id="JobTenure" class="d-flex col-12">
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="radio" name="JobTenure" id="JobTenure1">
                                        <label class="form-check-label" for="JobTenure1">
                                            無經驗可
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="radio" name="JobTenure" id="JobTenure2">
                                        <label class="form-check-label" for="JobTenure2">
                                            1年以上
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="radio" name="JobTenure" id="JobTenure3">
                                        <label class="form-check-label" for="JobTenure3">
                                            3年以上
                                        </label>
                                    </div>
                                </div>
                            </td>
                        </tr>



                        <tr>
                            <td><span class="text-danger p-1">*</span>學歷要求：</td>
                            <td>
                                <div id="Education" class="d-flex col-12 flex-wrap">
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="radio" name="Education" id="Education1">
                                        <label class="form-check-label" for="Education1">
                                            不拘
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="radio" name="Education" id="Education2">
                                        <label class="form-check-label" for="Education2">
                                            高中
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="radio" name="Education" id="Education3">
                                        <label class="form-check-label" for="Education3">
                                            專科
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="radio" name="Education" id="Education4">
                                        <label class="form-check-label" for="Education4">
                                            大學
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="radio" name="Education" id="Education5">
                                        <label class="form-check-label" for="Education5">
                                            研究所
                                        </label>
                                    </div>

                                </div>
                            </td>
                        </tr>


                        <tr>
                            <td><span class="text-danger p-1">*</span>語言條件：</td>
                            <td>
                                <div id="Language" class="d-flex">
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="checkbox" value="" id="Language1">
                                        <label class="form-check-label" for="Language1">
                                            英文
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="checkbox" value="" id="Language2">
                                        <label class="form-check-label" for="Language2">
                                            台語
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3 job-type">
                                        <input class="form-check-input" type="checkbox" value="" id="Language3">
                                        <label class="form-check-label" for="Language3">
                                            日語
                                        </label>
                                    </div>

                                </div>
                            </td>
                        </tr>


                        <tr class="opening-category">
                            <td><span class="mark-text-red p-1">*</span>電腦專長 ：</td>
                            <td>
                                <div id="ComputerSkill" class="d-flex flex-wrap col-lg-12">

                                    <div class="form-check col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="ComputerSkill1">
                                        <label class="form-check-label float-start" for="ComputerSkill1">
                                            HTML
                                        </label>
                                    </div>
                                    <div class="form-check col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="ComputerSkill2">
                                        <label class="form-check-label float-start" for="ComputerSkill2">
                                            CSS
                                        </label>
                                    </div>
                                    <div class="form-check col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="ComputerSkill3">
                                        <label class="form-check-label float-start" for="ComputerSkill3">
                                            JavaScript
                                        </label>
                                    </div>
                                    <div class="form-check col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="ComputerSkill4">
                                        <label class="form-check-label float-start" for="ComputerSkill4">
                                            C#
                                        </label>
                                    </div>
                                    <div class="form-check col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="ComputerSkill5">
                                        <label class="form-check-label float-start" for="ComputerSkill5">
                                            SQL
                                        </label>
                                    </div>
                                </div>
                            </td>
                        </tr>


                        <tr class="opening-category">
                            <td><span class="mark-text-red p-1">*</span>需備駕照：</td>
                            <td>
                                <div class="d-flex flex-wrap col-lg-12">

                                    <div class="form-check col-6 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="DrivingLicense1">
                                        <label class="form-check-label float-start" for="DrivingLicense1">
                                            汽車
                                        </label>
                                    </div>
                                    <div class="form-check col-6 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="DrivingLicense2">
                                        <label class="form-check-label float-start" for="DrivingLicense2">
                                            機車
                                        </label>
                                    </div>
                                </div>
                            </td>

                        </tr>

                        <tr>
                            <td><span class="mark-text-red p-1">*</span>需求人數：</td>
                            <td>
                                <div id="VancancyNumber" class="d-flex flex-wrap col-lg-12">
                                    <div class="col-6 col-lg-3">
                                        <input class="form-check-input" type="radio" name="VancancyNumber"
                                               id="VancancyNumber1">
                                        <label class="form-check-label" for="VancancyNumber1">
                                            不拘
                                        </label>
                                    </div>

                                    <div class="col-6 col-lg-3">
                                        <input class="form-check-input" type="radio" name="VancancyNumber"
                                               id="VancancyNumber2">
                                        <label class="form-check-label" for="VancancyNumber2">
                                            <input id="NumberInput" type="number" value="1" />人
                                        </label>
                                    </div>
                                </div>
                            </td>
                        </tr>


                        <tr>
                            <td><span class="text-danger p-1">*</span>職缺特色：</td>
                            <td>
                                <div id="JobFeature" class="d-flex flex-wrap job-type">
                                    <div class="col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="JobFeature1">
                                        <label class="form-check-label" for="JobFeature1">
                                            交通津貼
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="JobFeature2">
                                        <label class="form-check-label" for="JobFeature2">
                                            伙食津貼
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="JobFeature3">
                                        <label class="form-check-label" for="JobFeature3">
                                            週休二日
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="JobFeature4">
                                        <label class="form-check-label" for="JobFeature4">
                                            無須輪班
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="JobFeature5">
                                        <label class="form-check-label" for="JobFeature5">
                                            彈性上下班
                                        </label>
                                    </div>
                                    <div class="col-4 col-lg-3">
                                        <input class="form-check-input" type="checkbox" value="" id="JobFeature6">
                                        <label class="form-check-label" for="JobFeature6">
                                            國外駐點工作
                                        </label>
                                    </div>

                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>


            </div>
            <div class="back-next row mb-4">
                <a class="col-6 btn" href="~/Company/JobNewStep1">上一步</a>
                <a class="next col-6 btn" href="~/Company/JobNewStep3">下一步</a>
            </div>
        </div><!-- card end -->

    </div><!-- job-content end -->

</div>


